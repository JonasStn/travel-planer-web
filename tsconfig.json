{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@shared": ["src/app/_shared/index.ts"],
      "@shared/*": ["src/app/_shared/*"],
      "@core": ["src/app/_core/index.ts"],
      "@core/*": ["src/app/_core/*"],
      "@login/*": ["src/app/login/*"],
      "@home/*": ["src/app/home/*"],
      "@countries/*": ["src/app/countries/*"],
      "@notes/*": ["src/app/notes/*"],
      "@env": ["src/environments/environment.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
